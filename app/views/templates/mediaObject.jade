td
  - if (type == 'video')
    a.mediaMD.btn.btn-default.btn-xs(xdata-toggle="modal", href="#metadataPreview")
      span.glyphicon.glyphicon-film
  - else if (type == 'audio')
    a.mediaMD.btn.btn-default.btn-xs(xdata-toggle="modal", href="#metadataPreview")
      span.glyphicon.glyphicon-volume-up
  - else
    a.mediaMD.btn.btn-default.btn-xs(xdata-toggle="modal", href="#metadataPreview")
      span.glyphicon.glyphicon-question-sign

td
  - var magnitude = Math.floor(Math.log(meta.size) / Math.log(1024));
  - var size = (meta.size/Math.pow(1024, magnitude)).toFixed(2);
  - var unit = "B";
  - if (magnitude == 1) unit = "K";
  - if (magnitude == 2) unit = "M";
  - if (magnitude == 3) unit = "G";
  - if (!isNaN(size))
    span #{size}
    small.unit #{unit}

td=meta.mimetype

