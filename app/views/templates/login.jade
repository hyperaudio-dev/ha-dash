  script
    $("#browserid").click(function(){
      navigator.id.get(function(assertion) {
        if (assertion) {
          $("form#persona input").val(assertion);
          $("form#persona").submit();
        } else {
          location.reload();
        }
      });
    });
    
  hr
  
  form#loginForm(action="/login", method="post")
