<h2 id="titleLabel" class="label editable" data-field="label"><%- label %></h2>

<p>

<%
if (source.youtube && source.youtube.url) {%>
<iframe width="420" height="315" frameborder="0" allowfullscreen src="http://www.youtube.com/embed/<%print(_.escape(source.youtube.url.split('=')[1])) %>">
</iframe>
<%} else if (source.mp4 && source.mp4.url) {%>
<video controls width="420" height="315" src="<%print(_.escape(source.mp4.url)) %>">
</video>
<%} else if (source.mpeg && source.mpeg.url) {%>
<audio controls src="<%print(_.escape(source.mpeg.url)) %>">
</audio>
<%
}
%>

</p>

<p id="descLabel" class="lead desc editable" data-field="desc"><%
  var lines = desc.split("\n");
  for (var i = 0; i < lines.length; i++) {
    var line = lines[i];
    print(_.escape(line));
    if (i < lines.length - 1) print('<br />');
  }
%></p>

<p>Channel : <input type="hidden" class="channels" value="<%- channel %>"></p>

<p>Tags : <input type="hidden" class="tags" value="<%
print(tags.join(','));
%>"></p>


<a class="button primary" href="/maker/?m=<%- _id%>">Create Transcript</a>
<a class="button primary" href="/converter/?m=<%- _id%>">Convert Transcript</a>

<% if (owner == haDash.user) { %>
  <button class="button delete">Delete Video</button>
<% } %>

<p>&nbsp;</p>

<div id="transcripts"></div>
