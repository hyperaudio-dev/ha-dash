<h2 class="label editable" data-field="label"><%- label %></h2>

<p>
<% var ytdataStr = JSON.stringify(source.youtube)+""; 
print(_.escape(ytdataStr).substr(0,10));

/*ytdataStr = ytdataStr.toString();*/
var ytdata = JSON.parse(ytdataStr);
print(_.escape(ytdata.url));
%>
<iframe width="420" height="315" src="http://www.youtube.com/embed/x2qFQcgogCw">
</iframe>
</p>

<p class="lead desc editable" data-field="desc"><%
  var lines = desc.split("\n");
  for (var i = 0; i < lines.length; i++) {
    var line = lines[i];
    print(_.escape(line));
    if (i < lines.length - 1) print('<br />');
  }
%></p>

<p>Channel : <input type="hidden" class="channels" value="<%- channel %>"></p>

<p>Tags : <input type="hidden" class="tags" value="<%
print(tags.join(','));
%>"></p>


<a class="button primary" href="/maker/?m=<%- _id%>">Create Transcript</a>
<a class="button primary" href="/converter/?m=<%- _id%>">Convert Transcript</a>

<% if (owner == haDash.user) { %>
  <button class="button delete">Delete Video</button>
<% } %>

<p>&nbsp;</p>

<div id="transcripts"></div>

