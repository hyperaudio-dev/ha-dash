<hgroup class="section-head">
  <h1 class="section-head-heading">
    Reset Password
  </h1>
</hgroup>
<div class="row">
  <div class="large-8 medium-8 medium-offset-2 small-12 columns large-offset-2">
    <form id="passwordForm" class="form">
      <div class="form-component">
        <label for="email" class="form-label centered">Email</label> <input id="email" type="text" name="email" class="form-input text-input block large centered" placeholder="Email">
      </div>
      <div class="form-component actions">
        <button id="send" type="submit" class="button large primary"><img style="display:none" src="images/ajax-loader-ffffff-on-808080.gif"> Send</button>
        <p id="passwordFormError" style="display:none" class="form-alert">
          Sorry we have no record of that email address.
        </p>
        <p id="passwordFormConfirm" class="form-label text-center" style="display:none">
          Please check your email for instructions on how to change your password.
        </p>
        <p id="genericError" style="display:none" class="form-alert">
          Unexpected error
        </p>
      </div>
    </form>
  </div>
</div>
