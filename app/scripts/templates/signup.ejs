<hgroup class="section-head">
  <h1 class="section-head-heading">
    Sign up
  </h1>
</hgroup>
<div class="row">
  <div class="large-8 medium-8 small-12 columns large-offset-2 medium-offset-2">
    <form id="registerForm" class="form">
      <div class="form-component">
        <label for="username" class="form-label centered">Username</label> <input id="username" type="text" name="username" class="form-input text-input block large centered" placeholder="Username">
        <p id="registerFormError" style="display:none" class="form-alert">
          Wrong username.
        </p>
      </div>
      <div class="form-component">
        <label for="password" class="form-label centered">Password</label> <input id="password" type="password" name="password" class="form-input text-input block large centered" placeholder="Password">
      </div>
      <div class="form-component actions">
        <input id="signup" type="submit" class="button large primary" value="Sign up">
      </div>
    </form>
  </div>
</div>
</div>
