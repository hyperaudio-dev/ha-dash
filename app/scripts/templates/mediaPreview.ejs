<h2 class="label"><%- label %></h2>

<p class="lead desc"><%
	var lines = desc.split("\n");
	for (var i = 0; i < lines.length; i++) {
		var line = lines[i];
		print(_.escape(line));
		if (i < lines.length - 1) print('<br />');
	}
%></p>

<a class="button primary" target="_new" href="http://hyperaud.io/maker/?m=<%= _id%>">Create Transcript</a>
<a class="button primary" target="_new" href="http://hyperaud.io/converter/?m=<%= _id%>">Convert Transcript</a>

<p>&nbsp;</p>
<p>&nbsp;</p>

<table>
  <caption>Available Transcripts</caption>
  <thead>
    <tr>
      <th class="span1"></th>
      <th class="span2">Title</th>
      <th class="span3">Description</th>
      <th class="span1">Date</th>
      <th>Author</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  	<% for(var i = 0; i < transcripts.length; i++) { %>
  		<tr>
   			<td class="span1"><%- transcripts[i].type %></td>
   			<td class="span2 label"><%- transcripts[i].label %></td>
   			<td class="span3"><%- transcripts[i].desc %></td>
   			<td class="span1"><span class="timeago" title="<%- transcripts[i].modified %>"><%- transcripts[i].modified %></span></td>
   			<td><%- transcripts[i].owner %></td>
   			<td>
   				<% if (transcripts[i].type == "text") { %>
   					<a class="button small" target="_new" href="http://hyperaud.io/maker/?t=<%= transcripts[i]._id%>">Edit</a>
   					<br>
   					<button class="button align small">Align</button>
   				<% } else if (transcripts[i].type == "html") { %>
   					<a class="button small" target="_new" href="http://hyperaud.io/cleaner/?t=<%= transcripts[i]._id%>">Clean</a>
   				<% } else if (transcripts[i].type == "srt") { %>
   					<a class="button small" target="_new" href="http://hyperaud.io/converter/?t=<%= transcripts[i]._id%>">Convert</a>
   				<% } %>
   			</td>
   		</tr>
	<% } %>
  </tbody>
</table>

